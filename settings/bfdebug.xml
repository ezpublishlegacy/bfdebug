<?xml version="1.0" encoding="UTF-8"?>
<!-- for params, required by default is true -->
<!-- type can be string, ... -->
<operators>
	<operator name="bfdebug">
		<param name="depth" type="int" required="false" />
		<param name="params" type="array" required="false" />
	</operator>
	<operator name="bfdebugoverrides" />
	<operator name="bfdebugvars" />
	<operator name="bfdebugoperators" />
	<operator name="bfdebugDisableAll"> 
		<!-- disables ALL debug output. Good for spot checking dev work, or dev-proofing modules/scripts returning json/xml -->
	</operator>
</operators>